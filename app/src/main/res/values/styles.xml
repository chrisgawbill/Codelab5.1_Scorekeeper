<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <style name="image_button_style" parent="AppTheme">
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="minus_button_style" parent="image_button_style">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="android:contentDescription">@string/minus_button</item>
    </style>
    <style name="plus_button_style" parent="image_button_style">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">@string/plus_button</item>
    </style>
    <style name="score_text_style">
        <item name= "android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
    </style>
    <style name="team_text_style">
        <item name=
            "android:textAppearance">@style/TextAppearance.AppCompat.Display1
        </item>
    </style>
</resources>